/* pages/clientdetail/clientdetail.wxss */
.speedview{
    width: 100%;
    position: relative;
    margin-top: 15px;
}
.use_view{
    padding-bottom: 15px;
}
.use_view_top{
    margin-top: 5px;
    width: 100%;
    display: flex;
    text-align: center;
}
.use_view_item{
    margin:0px 15px 8px 15px;
    text-align: left;
}
.use_view_name{
    font-size: 12px;
    color: gray;
}
.my_process{
    width: 100%;
}
.transInfoView{
    padding: 10px;
    height: 40px;
    width: 100%;
    display: flex;
    text-align: center;
}
.myItemCellView{
    /* 均匀分布 */
    flex-grow: 1;
    text-align: center;
    height: 40px;
    margin-bottom: 8px;
    width: 25%;
    /* border: 1px solid gray; */
}
.myItem_value{
    font-size: 16px;
    color: #13b2ae;
    text-align: center;
    padding:0px 10px;
}
.myItem_name{
    font-size: 8px;
    color:gray;
    text-align: center;
}

@media(prefers-color-scheme:dark){
    .myItem_value{
        color: #1f7769;
    }
}
